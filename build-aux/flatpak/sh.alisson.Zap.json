{
    "id": "sh.alisson.Zap",
    "runtime": "org.gnome.Platform",
    "runtime-version": "48",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.node20",
        "org.freedesktop.Sdk.Extension.typescript"
    ],
    "tags": ["nightly"],
    "build-options": {
        "append-path": "/usr/lib/sdk/node20/bin:/usr/lib/sdk/typescript/bin"
    },
    "command": "sh.alisson.Zap",
    "finish-args": ["--share=ipc", "--device=dri", "--socket=wayland", "--socket=fallback-x11"],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "blueprint",
            "buildsystem": "meson",
            "cleanup": ["*"],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                    "tag": "v0.16.0",
                    "commit": "04ef0944db56ab01307a29aaa7303df6067cb3c0"
                }
            ]
        },
        {
            "name": "zap",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "dir",
                    "path": "../../"
                }
            ]
        }
    ]
}
